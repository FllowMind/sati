    border-radius: 0.7em;
    background: #eeeeee;
    margin: 0 10px;
    padding: 5px 5px 0 5px;
}

.product-list .marquee-item .marquee-image{
    cursor: auto;
    width: 100%;
    margin-top: 0.75em;
    display: block;
    height: 100px;
}

.product-list .marquee-item .marquee-content {
    display:block;
    width:154px;
    padding:2px 0;
    text-align:center;
    white-space: nowrap;
    word-break: keep-all;
    overflow: hidden;
    text-overflow: ellipsis;
}



